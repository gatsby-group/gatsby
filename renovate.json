{
  "extends": ["config:base", ":disablePeerDependencies"],
  "includePaths": [
    "package.json",
    "starters/**",
    "packages/**",
    "www/package.json"
  ],
  "major": {
    "masterIssueApproval": true
  },
  "masterIssue": true,
  "rebaseStalePrs": false,
  "ignoreDeps": ["react", "react-dom"],
  "rangeStrategy": "bump",
  "bumpVersion": null,
  "semanticCommitScope": null,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "minor updates in packages",
      "updateTypes": ["minor"],
      "excludePackageNames": [
        "@theme-ui/prism",
        "@theme-ui/typography",
        "sharp",
        "gatsby-plugin-theme-ui",
        "graphiql-explorer",
        "guess-webpack",
        "jest-silent-reporter",
        "js-combinatorics",
        "jscodeshift",
        "mini-css-extract-plugin",
        "scroll-behavior",
        "theme-ui",
        "webpack-stats-plugin",
        "xlsx",
        "zipkin",
        "zipkin-transport-http"
      ]
    },
    {
      "groupName": "patch updates in packages",
      "updateTypes": ["patch"]
    },
    {
      "depTypeList": ["engines"],
      "enabled": false
    }
  ],
  "timezone": "GMT",
  "schedule": "after 10am on Monday"
}
